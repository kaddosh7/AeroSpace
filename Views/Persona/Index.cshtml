@model List<Persona>

@{
    ViewBag.Title = "Agregar Personal";
}

<div class="row">
    <div class="col-md-9">
        <h2> Relaci&oacute;n de Personal </h2>
    </div>
    <div class="col-md-3 mt-1">
        <a style="float: right;" class="btn btn-success" href="Persona/Create"> Agregar Personal </a>
    </div>
</div>
<hr />

<table class="table table-sm table-striped table-hover table-light">
    <thead>
        <tr>
            <th> Id Personal</th>
            <th> Nombre </th>
            <th> Cedula </th>
            <th> Cargo </th>
            <th class="text-end"> Acci&oacute;n </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.IdPersona </td>
                <td> @item.NombrePersona </td>
                <td> @item.CedulaPersona </td>
                <td> @item.CargoPersona </td>
               <td id="btn_link">
                    <div style="float: right;" class="btn-group">
                        <span class="btn btn-sm btn-success"> @Html.ActionLink("Editar", "Edit", new { id = item.IdPersona }) </span>
                        <span class="btn btn-sm btn-info"> @Html.ActionLink("Detalles", "Details", new { id = item.IdPersona }) </span>
                        <span class="btn btn-sm btn-danger"> @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPersona }, new { onclick="return confirm('Seguro? Se eliminara el registro');"}) </span>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>