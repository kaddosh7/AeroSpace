@model List<Estadium>
@{ ViewBag.Title = "Relacion de Estadia"; }
    <div class="row">
        <div class="col-md-9">
            <h2> @ViewBag.Title </h2>
        </div>
        <div class="col-md-3 mt-1">
            <a style="float: right;" class="btn btn-success" href="Estadium/Create"> Registrar Estadia </a>
        </div>
    </div>
    <hr />
    <table class="table table-sm table-striped table-hover table-light">
        <thead>
            <tr>
                <th> Id Estadia </th>
                <th> Fecha Entrada </th>
                <th> Fecha Salida </th>
                <th> Avion </th>
                <th class="text-end"> Monto $ </th>
                @*<th class="text-end"> Acci&oacute;n </th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               <tr>
                   <td id="id_link"> @Html.ActionLink(item.IdEstadia + "", "Details", new { id = item.IdEstadia } ) </td>
                   <td> @item.FechaEntrada </td>
                   <td> @item.FechaSalida </td>
                   <td>
                        @if (item.Avion is not null)
                            @item.Avion.Siglas
                   </td>
                   <td class="text-end"> @item.MontoEtadia </td>
@*                   <td id="btn_link">
                        <div style="float: right;" class="btn-group">
                            <span class="btn btn-sm btn-success"> @Html.ActionLink("Editar", "Edit", new { id = item.IdEstadia }) </span>
                            <span class="btn btn-sm btn-info"> @Html.ActionLink("Detalles", "Details", new { id = item.IdEstadia }) </span>
                            <span class="btn btn-sm btn-danger"> @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEstadia }, new { onclick="return confirm('Seguro? Se eliminara el registro');"}) </span>
                        </div>
                    </td>*@
                </tr> 
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4"> Total x Estadias </th>
                <th class="text-end"> @ViewBag.MontoEstadia.ToString("0,0.00") </th>
            </tr>
        </tfoot>
    </table>