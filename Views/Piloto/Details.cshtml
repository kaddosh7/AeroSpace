@using AeroSpace.Models
@model Piloto
@{ ViewBag.Title = "Detalles de Piloto"; }
<h2> @ViewBag.Title </h2>
<hr /> <br />

<div class="row">
    <div class="col-md-3"> @Html.DisplayNameFor(model => model.IdPiloto): </div>
    <div class="col-md-9"> @Html.DisplayFor(model => model.IdPiloto) </div>
</div>

<div class="row">
    <div class="col-md-3"> @Html.DisplayNameFor(model => model.HorasVuelo): </div>
    <div class="col-md-9"> @Html.DisplayFor(model => model.HorasVuelo) </div>
</div>

<div class="row">
    <div class="col-md-3"> @Html.DisplayNameFor(model => model.LicenciaPiloto): </div>
    <div class="col-md-9"> @Html.DisplayFor(model => model.LicenciaPiloto) </div>
</div>

<div class="row">
    <div class="col-md-3"> @Html.DisplayNameFor(model => model.PersonaId): </div>
    <div class="col-md-9">
        <select style="border: none; background: none; padding: 0;" class="form-control" asp-for="IdPiloto" asp-items="ViewBag.IdPiloto" disabled></select>
    </div>
</div>

<div class="row">
    <div class="col-md-3"> @Html.DisplayNameFor(model => model.FechaRev): </div>
    <div class="col-md-9"> @Html.DisplayFor(model => model.FechaRev) </div>
</div>

<div class="row">
    <div class="col-md-3"> @Html.DisplayNameFor(model => model.EstadoPiloto): </div>
    <div class="col-md-9">
        @if (Model.EstadoPiloto == 1)
        {
            <span class="text-success fw-bolder"> Piloto Activo </span>
        } else
        {
            <span class="text-danger fw-bolder"> Piloto Inactivo </span>
        }
    </div>
</div>
<br /> <hr /> <br />
<div id="form_creation">
    <div id="form_creation" class="btn-group">
        <span class="btn btn-warning"> @Html.ActionLink("Editar Registro", "Edit", new { id = Model.IdPiloto })</span>
        <span class="btn btn-info"> @Html.ActionLink("Relación de Pilotos", "Index")</span>
    </div>
</div>