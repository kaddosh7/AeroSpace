@using Microsoft.AspNetCore.Authentication

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AeroSpace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AeroSpace.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">AeroSpace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index"> Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy"> Privacy </a>
                        </li>
                    </ul>
                    <ul style="float: right" class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item text-end">
                                <span class="nav-link text-white"> Hola, @User.Identity.Name </span>
                            </li>
                            <li class="nav-item text-end">
                                <a class="nav-link text-white" asp-controller="Acceso" asp-action="CerrarSesion"> Salir </a>
                            </li>
                        } else
                        {
                            <li class="nav-item text-end">
                                <a class="nav-link text-white" asp-controller="Acceso" asp-action="Login"> Iniciar Sesi&oacute;n </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="margin-top: -16px; height: 100vh; width: 100%;" class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-md-3">
            <div style="height: 100vh;" class="d-flex flex-column flex-shrink-0 p-4 text-white bg-dark">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
                <span class="fs-4"> Enlaces </span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                <a href="~/Empleado" class="nav-link text-white" aria-current="page">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="Empleado"/></svg>
                    Empleados
                </a>
                </li>
                <li>
                <a href="~/Persona" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="Persona"/></svg>
                    Personal
                </a>
                </li>
                <li>
                <a href="~/Hangar" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
                    Hangares
                </a>
                </li>
                <li>
                <a href="~/Modelo" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
                    Modelos
                </a>
                </li>
                <li>
                <a href="~/Avion" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
                    Aviones
                </a>
                </li>
                <li>
                <a href="~/Propietario" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
                    Propietarios
                </a>
                </li>
                <li>
                <a href="~/Piloto" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
                    Pilotos
                </a>
                </li>
                <li>
                <a href="~/Estadium" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
                    Estad&iacute;a
                </a>
                </li>
                <li>
                <a href="~/Vuelo" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
                    Vuelos
                </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong>mdo</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">New project...</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                @*<li><a class="dropdown-item" href="#">Sign out</a></li>*@
                </ul>
            </div>
            </div>
        </div>
    }



        <div style="padding: 24px 20px 24px 20px; box-sizing: border-box;" class="col-md-9">
            @RenderBody()
        </div>
    </div>

    


@*    <footer class="border-top footer text-muted bg-black">
        <div class="container">
            &copy; 2022 - AeroSpace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
